@model IEnumerable<ProjektVozila.Models.VehicleModel>

@{
    ViewBag.Title = "Modeli Vozila";
}

<h2>Modeli vozila</h2>

<p>
    @Html.ActionLink("Kreiraj novi unos", "Create")
</p>
<table class="table well">
    <tr>
        <th class="text-center">
        @Html.ActionLink("Naziv modela", "Index", new { sortOrderModele = ViewBag.ModelsortParametar })
        </th>
        <th class="text-center">
        Marka vozila
        </th>
        <th class="text-center">
        Kratica
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ModelName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleMake.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Abbreviation)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
